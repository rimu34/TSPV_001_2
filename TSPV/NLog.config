<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true">

	<!-- the targets to write to -->
	<targets>
		<target xsi:type="File"
				name="default_logFile"
				fileName="${basedir}/logs/ApplicationLogs_${shortdate}.log">
			<layout xsi:type="LayoutWithHeaderAndFooter">
				<header xsi:type="SimpleLayout" text="---------- LMF Application Started [${longdate}] ----------&#xD;&#xA;"/>
				<layout xsi:type="SimpleLayout" text="${longdate} [${threadid:padding=8}] [${uppercase:${level:padding=-5}}] ${callsite}() ${message} ${exception:format=tostring}"/>
				<footer xsi:type="SimpleLayout" text="&#xD;&#xA;---------- LMF Application Shutdown [${longdate}] ----------&#xD;&#xA;"/>
			</layout>
		</target>
		<target xsi:type="File"
				name="default_logCsv"
				fileName="${basedir}/logs/ApplicationCsvLogs_${shortdate}.csv">
			<layout xsi:type="CsvLayout"
					delimiter="Comma"
					withHeader="true">
				<column name="Date" layout="${longdate}"/>
				<column name="Level" layout="${level:upperCase=true}"/>
				<column name="Message" layout="${message}"/>
				<column name="Exception" layout="${exception:format=ToString}"/>
				<column name="StackTrace" layout="${stacktrace:topFrames=10}"/>
			</layout>
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="DefaultLogger" minlevel="Trace" writeTo="default_logFile"/>
		<logger name="DefaultCsvLogger" minlevel="Error" writeTo="default_logCsv"/>
	</rules>
</nlog>