<UserControl x:Class="TSPV.Navigation.Views.HomeHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">
    
    <Grid Height="120"
          Width="228">

        <Border Background="{DynamicResource MaterialDesignDarkSeparatorBackground}" 
                BorderBrush="{DynamicResource MaterialDesignLightSeparatorBackground}"
                BorderThickness="0 0 0 2"/>

        <Grid>

            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <fa:IconImage Grid.Column="0"
                          Icon="HomeLgAlt" 
                          Width="50"
                          Height="50"
                          Margin="15"/>

        </Grid>
        
    </Grid>
</UserControl>
